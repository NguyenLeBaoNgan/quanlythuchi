<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Số Tiền:"
                android:textSize="15dp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/edtnhapsotien"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:digits="0123456789"
                android:ems="10"
                android:hint="số tiền"
                android:inputType="number"
                android:maxLength="12"
                android:text="" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Danh Muc:"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtdanhmuccanhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Quản Lý Danh Muc)"
                android:textAlignment="textEnd"
                android:textColor="#99FFFF"
                android:textSize="20dp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.6"/>

            <Spinner
                android:layout_weight="0.4"
                android:id="@+id/spinner2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi Chú:"
            android:textSize="15dp" android:textStyle="bold"
            />

        <EditText
            android:id="@+id/edtghichu"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="ghi chú"
            android:inputType="text"
            android:maxLength="150" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời Gian:"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtthoigian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Thời Gian:"
            android:textAlignment="center"
            android:textColor="#555DD7"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnluu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:backgroundTint="#28BF91"
            android:text="Lưu" />


    </LinearLayout>

</androidx.cardview.widget.CardView>
